log_level          :info
log_location       '/var/log/chef/chef-client.log'

interval           <%= @node[:chef][:client_interval] %>
splay              <%= @node[:chef][:client_splay] %>

ssl_verify_mode    :verify_none

registration_url   'https://<%= @node[:chef][:server_fqdn] %>'
